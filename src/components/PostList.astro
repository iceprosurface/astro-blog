---
import FormattedDate from "./FormattedDate.astro";
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  posts: CollectionEntry<"blog">[];
  activeTag?: string;
}

const { posts, activeTag } = Astro.props;
---

<ul class="posts-list">
  {
    posts.map((post) => (
      <li class="post-item-wrapper">
        <a href={post.data.permalink} class="post-card">
          <div class="post-content">
            <h3 class="post-title">{post.data.title}</h3>

            <div class="post-meta">
              <time datetime={post.data.date?.toISOString()} class="post-date">
                {post.data.date && <FormattedDate date={post.data.date} />}
              </time>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags-list">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class={`tag ${tag === activeTag ? "active" : ""}`}>
                      #{tag}
                    </span>
                  ))}
                </div>
              )}
            </div>

            {post.data.description && (
              <p class="post-description">{post.data.description}</p>
            )}
          </div>

          {post.data.heroImage && (
            <div class="post-image-container">
              <Image
                src={post.data.heroImage!}
                alt={post.data.title || ""}
                width={200}
                height={120}
                class="post-image"
              />
            </div>
          )}
        </a>
      </li>
    ))
  }
</ul>

<style>
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Card Design */
  /* Card Design */
  .post-card {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1rem; /* Slightly reduced padding for list feel */
    border-radius: 12px;
    background: transparent; /* Transparent by default */
    border: 1px solid transparent; /* Reserve space for hover border */
    text-decoration: none;
    color: var(--dark);
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  /* Make post wrapper act as separator if needed, or just container */
  .post-item-wrapper {
    position: relative;
  }

  /* Optional: Add separator line between items, except last one */
  .post-item-wrapper:not(:last-child)::after {
    content: "";
    position: absolute;
    bottom: -0.75rem; /* Half of the 1.5rem gap */
    left: 1rem;
    right: 1rem;
    height: 1px;
    background-color: var(--lightgray, #f0f0f0);
    opacity: 0.5;
  }

  .post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .post-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
    color: var(--secondary);
    transition: color 0.2s;
  }
  .post-title:hover {
    color: var(--secondary-light);
  }

  .post-description {
    color: var(--gray);
    font-size: 0.95rem;
    margin: 0.8rem 0 0 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--gray);
  }

  .post-date {
    opacity: 0.8;
  }

  .tags-list {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--lightgray);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    color: var(--darkgray);
    transition: all 0.2s;
  }

  .tag.active {
    background: var(--secondary);
    color: white;
  }

  /* Image container */
  .post-image-container {
    flex-shrink: 0;
    width: 160px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
    display: none; /* Hidden on mobile by default */
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  @media (min-width: 640px) {
    .post-image-container {
      display: block;
    }
  }
</style>
